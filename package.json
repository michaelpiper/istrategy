{
  "name": "istrategy",
  "version": "2.0.0",
  "description": "Broadcasting with Socket.io on Koa written with TypeScript",
  "repository": "git@github.com:michaelpiper/istrategy.git",
  "main": "application/server.js",
  "type": "module",
  "scripts": {
    "lint": "eslint ./src",
    "dev": "yarn nodemon --exec \"yarn serve\"",
    "build": "yarn prisma generate && rm -rf ./application && tsc -p tsconfig.json",
    "build:watch": "rm -rf ./application && tsc -p tsconfig.json --watch",
    "serve": "yarn node-esm application/server.js",
    "start": "yarn serve",
    "test": "NODE_ENV=test yarn node-esm --test",
    "nodemon": "nodemon",
    "worker": "yarn node-esm ./application/worker.server.js",
    "node-esm": "node --no-warnings --loader esm-module-alias/loader",
    "ts-node-esm": "ts-node --esm",
    "pre-commit": "yarn lint --fix",
    "seed": "yarn node-esm ./prisma/seed.js",
    "migrate": "yarn prisma migrate dev",
    "migration:show": "yarn prisma migrate",
    "start-prod": "NODE_ENV=production yarn start"
  },
  "aliases": {
    "@idp": "application/@idp",
    "@admin": "application/@admin",
    "@api": "application/@api",
    "common": "application/common",
    "database": "application/database",
    "factories": "application/factories",
    "loaders": "application/loaders",
    "responses": "application/responses",
    "utils": "application/utils"
  },
  "keywords": [
    "koa",
    "ts",
    "KISS",
    "SOLID",
    "DRY"
  ],
  "author": "Michael Piper",
  "license": "ISC",
  "dependencies": {
    "@adminjs/design-system": "^4.0.3",
    "@adminjs/koa": "^4.0.1",
    "@adminjs/passwords": "^4.0.0",
    "@adminjs/prisma": "^5.0.1",
    "@adminjs/themes": "^1.0.1",
    "@adminjs/upload": "^4.0.1",
    "@bull-board/api": "^5.6.0",
    "@bull-board/koa": "^5.6.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@faker-js/faker": "^8.0.2",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^11.0.2",
    "@mui/icons-material": "^5.14.9",
    "@mui/material": "^5.14.10",
    "@prisma/client": "^5.4.1",
    "@rjsf/core": "^5.13.0",
    "@rjsf/mui": "^5.13.0",
    "@rjsf/utils": "^5.13.0",
    "@rjsf/validator-ajv8": "^5.12.1",
    "@types/react-json-editor-ajrm": "^2.5.4",
    "adminjs": "^7.0.0",
    "axios": "^1.5.0",
    "bull": "^4.10.4",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-store": "^3.0.1",
    "dotenv": "^16.0.3",
    "esm-module-alias": "^2.0.3",
    "ioredis": "^5.3.2",
    "is-promise": "^4.0.0",
    "is-reference": "^3.0.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^2.2.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-qs": "^3.0.0",
    "koa2-formidable": "^1.0.3",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "nanoid": "^5.0.1",
    "prisma": "^5.4.1",
    "react-json-editor-ajrm": "^2.5.14",
    "shortid": "^2.2.16",
    "supertest": "^6.3.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/crypto-js": "^3.1.44",
    "@types/dotenv": "^8.2.0",
    "@types/flat": "^5.0.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/jwt-decode": "^2.2.1",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-qs": "^2.0.1",
    "@types/koa-session": "^6.4.1",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.2",
    "@types/lodash": "^4.14.195",
    "@types/morgan": "^1.9.4",
    "@types/react-datepicker": "^4.11.2",
    "@types/react-dom": "^18.2.4",
    "@types/react-text-mask": "^5.4.11",
    "@types/request": "^2.48.8",
    "@types/shortid": "^0.0.29",
    "@types/styled-components": "^5.1.26",
    "@types/styled-system": "^5.1.16",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": "application/**/*.js",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 300
  }
}
